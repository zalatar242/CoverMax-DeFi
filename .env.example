# Network Configuration
NETWORK=mainnet            # The network to use (mainnet or hardhat)
FORK_ENABLED=true         # Set to true to use Base mainnet fork for local development

# Base Mainnet Configuration
BASE_MAINNET_RPC_URL=     # Required: Base mainnet RPC URL from https://docs.base.org/guides/quickstart

# Deployment Configuration
PRIVATE_KEY=              # Optional: Your deployer wallet private key (only needed for mainnet deployment)
BASESCAN_API_KEY=         # Optional: API key from https://basescan.org/apis (only needed for mainnet verification)
