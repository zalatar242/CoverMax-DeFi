# Network Configuration
NETWORK=base-mainnet      # The network to use (base-mainnet, base-sepolia, or hardhat)
FORK_ENABLED=true        # Set to true to use Base mainnet fork for local development

# Base Network Configuration
BASE_MAINNET_RPC_URL=    # Required: Base mainnet RPC URL from https://docs.base.org/guides/quickstart
BASE_SEPOLIA_RPC_URL=    # Required: Base Sepolia RPC URL (https://sepolia.base.org)
ASSET_HUB_WESTEND_RPC_URL=https://westend-asset-hub-eth-rpc.polkadot.io
PASSETHUB_RPC_URL=https://testnet-passet-hub-eth-rpc.polkadot.io


# Deployment Configuration
PRIVATE_KEY=             # Optional: Your deployer wallet private key (only needed for deployment)
BASESCAN_API_KEY=        # Optional: API key from https://basescan.org/apis (needed for contract verification)
ASSET_HUB_WESTEND_SUBSCAN_API_KEY=  # Optional: API key from https://pro.subscan.io (needed for contract verification)
